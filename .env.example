# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Email Configuration (IMAP)
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USERNAME=your-email@company.com
EMAIL_PASSWORD=your-app-password

# Exchange Configuration (si vous utilisez Exchange au lieu d'IMAP)
EXCHANGE_EMAIL=your-email@company.com
EXCHANGE_PASSWORD=your-password
EXCHANGE_SERVER=outlook.office365.com

# FTP/SFTP Configuration
FTP_HOST=ftp.supplier.com
FTP_PORT=21
FTP_USERNAME=your-ftp-user
FTP_PASSWORD=your-ftp-password
FTP_USE_SFTP=true

# Application Settings
APP_NAME=Gestionnaire Commandes Fournisseurs
APP_VERSION=1.0.0
LOG_LEVEL=INFO
COLLECTION_TIME=10:00

# Storage
LOCAL_STORAGE_PATH=./data
TEMP_FOLDER=./temp
